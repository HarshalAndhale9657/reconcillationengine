{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "prisma/prisma.ts"],
  "exclude": ["node_modules", "dist"]
}